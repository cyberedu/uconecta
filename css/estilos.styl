color_facebook = #375E98

body 
	font-family 'Open Sans' sans-serif
	font-size 16px 
	font-weight 400
.container
	width 1000px
	margin 0 auto
	position relative
	@media (max-width: 1000px)
		width 100%
header
	height 100px
	box-sizing border-box
	padding-top 20px
	text-align left
	h1 
		display inline-block
		vertical-align top
		margin 0
		img 
			height 60px
	nav
		display inline-block
		vertical-align top
		position absolute
		top 0
		right 0
		ul
			list-style none
			padding 0
			li 
				display inline-block
				a
					display inline-block 
					color gray
					padding 10px 20px
					text-decoration none
					text-transform uppercase
section.principal
	color white
	background url('../imgs/fondo.png') center center no-repeat
	background-size cover
	padding-top 100px
	padding-bottom 30px
	p.principal
		font-size 45px
		font-weight 800
		text-align center
		text-transform uppercase
		letter-spacing -2px
	p.boton 
		text-align center
		a 
			border-radius 10px
			color white
			font-size 20px
			font-weight 400
			background-color color_facebook
			display inline-block
			padding 20px 50px
			text-decoration none
	p.subtitulo
		text-decoration center
		font-weight 300
		text-align center

section.features
	background-color #ebebeb
	padding-top 100px
	padding-bottom 50px
	div.row
		width 100%
		font-size 0
		p 
			color black
			font-size 20px 
			font-weight 700
			text-align center
		article
			box-sizing border-box
			display inline-block
			vertical-align top
			width 33.33%
			@media (max-width: 1000px)
				width 100%
			figure
				padding-top 30px
				text-align center
				img 
					text-align center 
			p 
				box-sizing border-box
				color gray
				font-size 16px
				font-weight 300
				padding 10px 30px
section.friends
	padding-top 100px
	h2 
		color black 
		font-size 20px 
		font-weight 700
		text-align center
	div.row
		width 100%
		font-size 0
		figure 
			box-sizing border-box
			display inline-block
			width 10%
			margin 0
			padding 10px
			img 
				border-radius 5px
				width 100%
section.partners
	padding-top 70px
	padding-bottom 100px
	div.row
		width 100%
		font-size 0
		h2 
			color black 
			font-size 20px 
			font-weight 700
			text-align center
		figure 
			box-sizing border-box
			display inline-block
			width 25%
			margin 0
			padding 10px
			text-align center
			img 
				width 60%
footer 
	background-color black
	color white
	padding 30px 0
	p 
		font-size 16px 
		font-weight 400	 
